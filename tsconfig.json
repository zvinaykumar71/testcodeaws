{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictBindCallApply": false,
    "sourceMap": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "outDir": ".lib",
    "skipLibCheck": true,            // âœ… ignore missing type errors in node_modules
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/swagger", "src/gh-swagger-ui", "src/webpack", "test", "node_modules"]
}
